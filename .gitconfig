[user]
	name = Jente Hidskes
	email = dev@hjdskes.nl
	# signingKey = !

[core]
	editor = vim
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
	# excludesfile = ~/.gitconfig
[credential]
	helper = cache
[status]
	showUntrackedFiles = no
[rebase]
	autoStash = true
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = red
[diff]
	noprefix = true
[commit]
	gpgsign = false
[gpg]
	program = gpg
[pull]
	rebase = true
[push]
	default = simple
[init]
	defaultBranch = master
[alias]
	wip = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
